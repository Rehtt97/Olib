extends base

block content
  main.main
    .login-form
      h2.login-heading Log into your account
      form.form--login
        label.form__label(for='email') Email address
        input#email(type='email' placeholder='your@email.com' required)
        label.form__label(for='password') Password
        input#password(type='password' placeholder='••••••••' required)
        button.form__btn Login
    
